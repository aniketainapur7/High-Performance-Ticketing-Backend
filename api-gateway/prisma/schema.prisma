generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Train {
  id          Int    @id @default(autoincrement())
  name        String
  source      String
  destination String
  seats       Seat[]
}

model Seat {
  id        Int    @id @default(autoincrement())
  seatNo    Int
  berthType String
  trainId   Int
  train     Train  @relation(fields: [trainId], references: [id])
}

model Booking {
  id        Int      @id @default(autoincrement())
  userId    String
  status    String
  trainId   Int
  seatId    Int
  createdAt DateTime @default(now())
}
